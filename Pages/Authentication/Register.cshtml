@page "/register"
@model SWD392_Project.Pages.Authentication.RegisterModel
@{
    ViewData["Title"] = "Register page";
    Layout = null;
}

<title>@ViewData["Title"]</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .wrap-form {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
    }

    #captcha-container {
        background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
        color: #000000;
        width: fit-content;
        padding: 10px 20px;
    }

    #login-form {
        border-radius: 7px;
        background: #ffffff;
        padding: 30px;
        width: 40%;
    }
</style>

<div class="wrap-form">
    <form method="post" id="login-form" asp-page="Register">
        <h2 class="text-center mb-4">Register</h2>
        <div class="form-group">
            <label class="form-label">Full name</label>
            <input type="text" class="form-control" name="fullName" required>
        </div>
        <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label class="form-label">Password</label>
            <input type="password" class="form-control password" name="password" required>
        </div>
        <div class="form-group">
            <label class="form-label">Confirm Password</label>
            <input type="password" class="form-control cf_password" required>
        </div>
        <div class="form-group">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" name="phone" maxlength="10" required>
        </div>
        @if (TempData.ContainsKey("messageResponse"))
        {
            <div class="form-group">
                <p class="@((@TempData["messageResponse"].ToString().Contains("fail")) ? "text-danger" : "text-success")">@TempData["messageResponse"]</p>
            </div>
        }
        <div class="form-group">
            <button type="submit" class="btn btn-primary form-control">Register</button>
        </div>
        <p class="mt-4 text-sm text-center">
            Already have an account?
            <a asp-page="/Authentication/Login" class="text-primary text-gradient font-weight-bold">Log In</a>
        </p>
    </form>
</div>

<script>
    const pass = document.querySelector(".password");
    const cfpass = document.querySelector(".cf_password");
    const form = document.querySelector("#login-form");

    form.addEventListener("submit", function (event) {
        event.preventDefault();
        if (cfpass.value === pass.value) {
            form.submit();
        } else {
            alert("Confirm password must be match your password!");
        }
    });


</script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
